{
  "compilerOptions": {
    "target": "ES2020",                         
    "module": "commonjs",                       
    "strict": true,                             
    "esModuleInterop": true,                    
    "skipLibCheck": true,                       
    "forceConsistentCasingInFileNames": true,   
    "outDir": "./dist",                         
    "rootDir": "./src",                         
    "resolveJsonModule": true,                  
    "baseUrl": "./",                            
    "paths": {                                  
      "*": ["node_modules/*"]
    },
    "sourceMap": true                           
  },
  "include": ["src/**/*.ts", "jest.config.ts"],                   
  "exclude": ["node_modules", "**/*.spec.ts"]   
}
